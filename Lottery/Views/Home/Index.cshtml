@{
    ViewBag.Title = "Home Page";
}

<script src="~/Scripts/ContractJS.js"></script>

<div class="jumbotron">
    <div class="col-md-8">
        <h1 class="">Lottery</h1>
        <p class="">Our Lottery is Full Randomized Lottery!</p>
    </div>

    <img src="~/Images/Block.gif" width="200px" height="150px"/>

</div>

<div >
    <div >
        <form id="play_form">
            <div class="row">
                <div class="col-md-8">

                    <div class="row">
                        <div class="col-md-5 col-sm-6 col-xs-12">
                            <div class="form-group">
                                <h3>Insert Your commitment</h3>
                                <div class="input-group">
                                    <input type="text" class="form-control" id="commitment">

                                </div>
                            </div>
                        </div>
                    </div>

                </div>

            </div>
            <div class="row">
                <div class="col-md-12">
                    <h3>Choose your lucky numbers from 1 to 9</h3>

                    <div class="row">
                        <div class="">
                            <div class="col-lg-2">
                                <input type="number" class="form-control" id="number1" pattern="1?[0-9]" min="1" step="1" max="9" placeholder="First number"> <span class="hr"></span>
                            </div>
                            <div class="col-lg-2">
                                <input type="number" class="form-control" id="number2" pattern="1?[0-9]" min="1" step="1" max="9" placeholder="Second number"><span class="hr"></span>
                            </div>
                            <div class="col-lg-2">
                                <input type="number" class="form-control" id="number3" pattern="1?[0-9]" min="1" step="1" max="9" placeholder="Third number"> <span class="hr"></span>
                            </div>
                            <div class="col-lg-2">
                                <input type="number" class="form-control" id="number4" pattern="1?[0-9]" min="1" step="1" max="9" placeholder="Forth number"> <span class="hr"></span>
                            </div>
                        </div>
                    </div>
                    <div>
                        <img type="button" class="ballsPicStyle" onclick="setRandomNumbers()"  src="~/Images/Lottery.jpg"></img> 

                    </div>
                    <div style="padding-left: 40%">
                        <img id="loading" style="visibility: hidden; width: 30%; height: 150px" src="~/Images/loading.gif" />
                    </div>
                </div>
            </div>
            <div>
                <h3></h3>
            </div>
            <button id="playBtn" type="button" class="btn btn-success col-lg-12" onclick="play()">Play Now>></button>
            <button id ="randomBtn" disabled="disabled" type="button" class="btn btn-success col-lg-12" onclick="sendRandom()">Send Your Random>></button>
            <button id="checkForStartBtn" disabled="disabled" type="button" class="btn btn-success col-lg-12" onclick="checkIfLotteryCanStart()">Check If Lottery Can Start>></button>

        </form>
    </div>
</div>